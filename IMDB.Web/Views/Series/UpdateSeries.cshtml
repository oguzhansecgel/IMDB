@model UpdateSeriesVM
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="SeriesId" />
    <label>Dizi Adı</label>
    <input type="text" asp-for="SeriesName" class="form-control" />
    <span asp-validation-for="SeriesName" class="text-danger"></span>

    <br />
    <label>Dizi Senesi</label>
    <input type="text" asp-for="SeriesYear" class="form-control" />
    @*<span asp-validation-for="ProductPrice" class="text-danger"></span>*@

    <br />
    <label>Dizi Açıklaması</label>
    <input type="text" asp-for="SeriesDescription" class="form-control" />
    @*<span asp-validation-for="ProductDescription" class="text-danger"></span>*@

    <br />
    
    <label>Dizi Kategorisi</label>
    @Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v1,new{@class="from-control"})
    @*<span asp-validation-for="CategoryID" class="text-danger"></span>*@

    <br />
    <br />

    <label>Dizi Yönetmeni</label>
    @Html.DropDownListFor(x=>x.DirectorId,(List<SelectListItem>)ViewBag.v2,new{@class="from-control"})
    @*<span asp-validation-for="CategoryID" class="text-danger"></span>*@

    <br />
    <button class="btn btn-outline-success">Dizi Güncelle</button>
</form>

